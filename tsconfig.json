{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "declaration": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "resolveJsonModule": true
    },
    "include": ["src"]
}
